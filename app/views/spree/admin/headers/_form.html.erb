<%= render partial: 'spree/shared/error_messages', locals: { target: @header } %>
<fieldset class="form-group no-border-bottom no-border-top">
  <div class="row">
    <div id="general_fields" class="col-9">
      <div class="row">
        <div class="col-12">
          <%= f.field_container :video_embed_url do %>
            <%= f.label :video_embed_url, class: 'required' %>
            <%= f.text_field :video_embed_url, class: 'fullwidth', required: true %>
          <% end %>
          <%= f.field_container :text do %>
            <%= f.label :description %><br />
            <%= f.text_area :text, rows: 7, class: 'fullwidth' %>
            <span class="info">
              <%= t('spree.character_limit') %>
            </span>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</fieldset>
