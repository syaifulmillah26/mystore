<%= render partial: 'spree/shared/error_messages', locals: { target: @testimony } %>
<fieldset class="form-group no-border-bottom no-border-top">
  <div class="row">
    <div id="general_fields" class="col-9">
      <div class="row">
        <div class="col-12">
          <%= f.field_container :name do %>
            <%= f.label :name, class: 'required' %>
            <%= f.text_field :name, class: 'fullwidth', required: true %>
          <% end %>
          
          <%= f.field_container :title do %>
            <%= f.label :title, class: 'required' %>
            <%= f.text_field :title, class: 'fullwidth', required: true %>
          <% end %>

          <%= f.field_container :text do %>
            <%= f.label :description %><br />
            <%= f.text_area :text, rows: 7, class: 'fullwidth' %>
            <span class="info">
              <%= t('spree.character_limit') %>
            </span>
          <% end %>

        </div>
      </div>
    </div>

  </div>
</fieldset>
